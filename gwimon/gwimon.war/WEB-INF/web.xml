<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<servlet>
		<servlet-name>Gwimon Servlet</servlet-name>
		<servlet-class>gwimon.server.GwimonServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Gwimon Servlet</servlet-name>
		<url-pattern>/gwimon/gwimon</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>Simon Filter</filter-name>
		<filter-class>org.javasimon.javaee.SimonServletFilter</filter-class>
		<init-param>
			<param-name>prefix</param-name>
			<param-value>gwimon</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>Simon Filter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>
